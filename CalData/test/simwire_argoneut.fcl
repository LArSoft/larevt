#include "services.fcl"
#include "channelstatus_argoneut.fcl"
#include "detsimmodules.fcl"

process_name: SimWire

services:
{
  # Load the service that manages root files for histograms.
  TFileService: { fileName: "simwire_argoneut.root"         }
  #scheduler:    { wantTracer: false wantSummary: true }
  #Timing:       {}
  #SimpleMemoryCheck:     { ignoreTotal: 1 } # default is one
  RandomNumberGenerator: {} #ART native random number generator
}

services.ExptGeoHelperInterface: @local::argoneut_geometry_helper
services.Geometry: @local::argoneut_geo
services.LArPropertiesService: @local::argoneut_properties            
services.LArFFT: @local::argoneut_larfft
services.LArFFT.FFTOption: ""
services.DetectorPropertiesService: @local::argoneut_detproperties
services.DatabaseUtil:       @local::argoneut_database
services.DatabaseUtil.ShouldConnect: false
services.ChannelStatusService: @local::argoneut_channelstatus

source:
{
  module_type: EmptyEvent
  maxEvents:   0       # Number of events to create
}

outputs:
{
}

physics:
{

 producers:
 {
  daq: @local::argoneut_simwire
 }

 #define the producer and filter modules for this path, order matters, 
 #filters reject all following items.  see lines starting physics.producers below
 simulate: [ daq ] 

 #define the path for analyzer modules, order does not matter.
 #see lines starting physics.analyzers below
 ana:  [ ]

 #trigger_paths is a keyword and contains the paths that modify the art::event, 
 #ie filters and producers
 trigger_paths: [ simulate ] 

 #end_paths is a keyword and contains the paths that do not modify the art::Event, 
 #ie analyzers and output streams.  these all run simultaneously
 end_paths:     [ ]  
}
